<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
  integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<div class="container setting" style="width: 50%;">
  <form class="container" action="settings" method="post">
    <h2 style="text-align:center; padding:1rem">Edit Post</h2>
    <div class="form-outline mb-4">

      <label for="">The number of author name</label>
      <input type="text" id="form6Example4" class="form-control" name="username" readonly
        value="<%-post.authorName%>" />
    </div>
    <div class="form-outline mb-4">
      <label for="">The number of likes of the post</label>
      <input type="text" id="form6Example4" class="form-control" name="username" readonly value="<%-post.like.length-1%>" />
    </div>
    <div class="form-outline mb-4">
      <label for="">The number of dislikes of the post</label>
      <input type="text" id="form6Example4" class="form-control" name="username" readonly value="<%-post.dislike.length-1%>" />
    </div>
    <div class="form-outline mb-4">
      <label for="">Creation Date</label>
      <input type="text" id="form6Example4" class="form-control" name="username" readonly value="<%-post.createdAt.toDateString()%>" />
    </div>
    <div class="form-group">

      <% if (locals.validation_error !='' ) { %>
        <%- include('./partials/_mesaj') %>
          <% } %>
            <textarea type="text" class="form-control" name="shareText"
              placeholder="Write something"><%-post.text%></textarea>
    </div>
    <button type="submit" class="btn btn-primary  btn-block mb-4">Update</button>

    <a href="timeline" type="submit" class="btn btn-primary btn-block mb-4">Return</a>
  </form>

</div>

</body>