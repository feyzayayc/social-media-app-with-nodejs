<div class="container setting">
    <form class="container" action="settings" method="post">
         <h3 style="text-align:center; padding:1rem">Edit User</h3>

         <% if (locals.validation_error != '') { %>
            <%- include('./partials/_mesaj') %>
          <% } %>
        <div class="form-outline mb-4">
            <input type="text" id="form6Example4" class="form-control" name="username" readonly placeholder="Kullanıcı Adı" value="<%-user.username%>"/>
        </div>
        
        <div class="form-outline mb-4">
            <input type="email" id="form6Example5" class="form-control" name="email" readonly  placeholder="E-mail" value="<%-user.email%>"/>
        </div>

        <div class="form-outline mb-4">
            <input type="text" id="form6Example6" class="form-control" name="name" placeholder="Ad" value="<%-user.name%>"/>
        </div>

        <div class="form-outline mb-4">
            <input type="password" id="form6Example3" class="form-control" name="oldPassword" placeholder="Eski Şifre"/>
        </div>

        <div class="form-outline mb-4">
            <input type="password" id="form6Example5" class="form-control" name="newPassword"   placeholder="Yeni Şifre" />
        </div>

        <div class="form-outline mb-4">
            <input type="password" id="form6Example5" class="form-control" name="newPasswordAgain"   placeholder="Yeni Şifre (Tekrar)" />
        </div>
        <button type="submit" class="btn btn-primary btn-block mb-4">Update</button>
        <a href="timeline" type="submit" class="btn btn-primary btn-block mb-4">Return</a>

    </form>
</div>